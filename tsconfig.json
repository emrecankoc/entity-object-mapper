{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./lib"
  ]
}